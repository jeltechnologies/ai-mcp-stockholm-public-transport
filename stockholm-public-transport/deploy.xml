<?xml version="1.0" encoding="UTF-8"?>
<project name="stockholm-public-transport" default="deploy" basedir=".">

	<property name="app-name" value="stockholm-public-transport" />
	<property name="version" value="0.0.1-SNAPSHOT" />

	<property name="build" value="./target" />

	<target name="mvn">
	    <exec dir="." executable="cmd">
	    	<arg line="/c mvn clean install -DskipTests" />
	    </exec>
	</target>

	<target name="deploy" depends="mvn">
		<copy file="${build}/${app-name}-${version}.jar" tofile="Y:\git\stockholm-public-transport\${app-name}.jar" />
	</target>

</project>